      "odh-recipe.min.js"
    ],
    "scripts": [
      {
        "file": "odh-recipe.min.js",
        "parameter": ""
      }
    ]
  },
  "configuration": {
    "tagName": "odh-recipe",
    "options": [
      {
        "key": "content-id-list",
        "type": "text",
        "label": "List of content ids (see bottom right of a detail card)",
        "required": false,
        "options": {
          "default": ""
        }
      },
      {
        "key": "language",
        "type": "select",
        "label": "language",
        "required": false,
        "options": {
          "values": [
            "en",
            "de",
            "it"
          ],
          "default": "de"
        }
      },
      {
        "key": "page-size",
        "type": "number",
        "label": "Number of list items per page",
        "required": false,
        "options": {
          "default": 20
        }
      },
      {
        "key": "default-presentation",
        "type": "select",
        "label": "Default type of list presentation",
        "required": false,
        "options": {
          "default": "grid",
          "values": [
            "list",
            "grid"
          ]
        }
      }
    ]
  }
